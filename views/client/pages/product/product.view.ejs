<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= pageTitle %></title>
    <!-- Style -->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
    />

    <link rel="stylesheet" href="client/styles/style.css" />
  </head>
  <body>
    <%- include("../../layouts/header.view.ejs") %>
    <div class="container my-3">
      <div class="row">
        <div class="col-12"><%- include("../../layouts/title.view.ejs") %></div>
      </div>

      <div class="row">
        <% productDataList.forEach(productItem => {%>
        <div class="col-3 mb-3">
          <div class="product-item">
            <div class="inner-image">
              <img src="<%= productItem.thumbnail %>" alt="<%= productItem.title %>" />
            </div>
            <div class="inner-content">
              <h3 class="inner-title"><%= productItem.title %></h3>
              <div class="inner-price-new"><%= productItem.newPrice.toFixed(2) %>$</div>
              <div class="inner-price-old"><%= productItem.price %>$</div>
              <div class="inner-discount"><%= productItem.discountPercentage %>%</div>
            </div>
          </div>
        </div>
        <!-- End Product Item -->
        <%}); %>
      </div>
    </div>
    <%- include("../../layouts/footer.view.ejs") %>

    <!-- Script -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="reload/reload.js"></script>
  </body>
</html>
